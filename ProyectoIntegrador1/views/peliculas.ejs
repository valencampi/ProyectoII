    <section>
      <ul class="detalles">

      </ul>

      <button class="recomendaciones uk-button uk-button-text" type="button" name="button">Tambien podría interesarte</button>
      <ul class="display-none recomen">
      </ul>
    <br>
    
    <button class="otras uk-button uk-button-text" type="button" name="button">Reseñas de esta película</button>
        <ul class="display-none otras">
          <p class="otras" name="otras"> Reseñas de otros usuarios</p>  
        <% if(resenas.length > 0){ %>
          <% for (let i = 0; i < resenas.length; i++) { %>
            <p class="resena"> 
              Usuario:
            </p>
            <p class="puntaje">
              Reseña: <%= resenas[i].texto %>
            </p>
            <p> 
              Puntaje: <%= resenas[i].puntaje %> 
            </p>
            <p> 
              Última actualización: 
            </p>
            <% } %>
         <% } else { %>
           <h2> Todavía no hay reseñas de esta película </h2>
         <% } %>
        </ul>

    <button class="uk-button uk-button-text resena" type="button" name="button"> Dejá tu reseña de esta película  </button>
    <ul class="display-none rese">
     <form class="formulario" action="/peliculas/resena/<%= idPeli %>" method="post" style="border:1px solid black">
        <div class="container">
          <h1 class="titulo" >Tu reseña</h1>
              
          <label class="resena"><b>Mail:</b></label> 
          <br>     
          <input class='mail' type="email" placeholder="Ingresar correo electrónico" name="email" required>
          <br>
        
          
          <label><b>Contraseña:</b></label>
          <br> 
          <input type="password" placeholder="Ingresar contraseña" name="password" required>
          <br>
          
          <label><b>Reseña:</b></label>
          <br> 
          <input class="resenas" type="message"  placeholder="Deje su reseña" name="texto" required>

          <br>

          <label><b>Puntaje</b> </label>
          <br> 
          <select class="puntaje" name="puntaje">
            <option value="nada" selected disabled>Elegir</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
          </select> 

          <br>
          <br>
        
          <button class="final" type="submit"> Guardar </button>
          <br>
          <br>
        
        </form>
      </ul>  
      <br>
    </section>

